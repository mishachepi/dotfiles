{
  "title": "Middle Click and Caps to Control",
  "rules": [
    {
      "description": "Right Option acts as middle mouse button",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option"
          },
          "to": [
            {
              "pointing_button": "button3"
            }
          ]
        }
      ]
    },
    {
      "description": "Caps Lock acts as Left Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "Change left_option+hjkl to arrow keys (Vim style)",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "left_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "right_arrow" }],
          "type": "basic"
        }
      ]
    }
  ]
}
